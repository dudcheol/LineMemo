<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainGreen</item>
        <item name="colorPrimaryDark">@color/colorBackgroundNavy</item>
        <item name="colorAccent">@color/colorIconGreen</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Toolbar Theme -->
    <style name="Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBackgroundNavy</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- Image Scale -->
    <style name="ImageScale_FITCENTER">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Font -->
    <style name="TitleFont_1">
        <item name="android:textColor">@color/colorMainGreen</item>
    </style>

    <style name="TitleFont_2">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ContentFont_1">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Edit Text -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>

    <!-- Card -->
    <style name="Card" parent="CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>
